  <script>
    // Tab logic
    const tabs = { login: "content-login", signup: "content-signup", request: "content-request" };
    function showTab(tab) {
      Object.keys(tabs).forEach(t => {
        document.getElementById(tabs[t]).classList.add("hidden");
        document.getElementById("tab-" + t).classList.remove("bg-white/10");
      });
      document.getElementById(tabs[tab]).classList.remove("hidden");
      document.getElementById("tab-" + tab).classList.add("bg-white/10");
    }
    document.getElementById("tab-login").onclick = () => showTab("login");
    document.getElementById("tab-signup").onclick = () => showTab("signup");
    document.getElementById("tab-request").onclick = () => showTab("request");
  </script>
